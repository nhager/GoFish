<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MapAddMarkerActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/markerName"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marker Name"
        android:id="@+id/markerNameText"
        android:layout_alignBottom="@+id/markerName"
        android:layout_toRightOf="@+id/markerName"
        android:layout_alignTop="@+id/markerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/fishName"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/markerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish Name"
        android:id="@+id/fishNameText"
        android:layout_alignBottom="@+id/fishName"
        android:layout_toRightOf="@+id/fishName"
        android:layout_alignTop="@+id/fishName"
        android:layout_alignRight="@+id/markerNameText"
        android:layout_alignEnd="@+id/markerNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/fishDescription"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/fishName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fish Description"
        android:id="@+id/fishDescriptionText"
        android:layout_alignBottom="@+id/fishDescription"
        android:layout_toRightOf="@+id/fishDescription"
        android:layout_alignTop="@+id/fishDescription"
        android:layout_alignRight="@+id/fishNameText"
        android:layout_alignEnd="@+id/fishNameText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Marker"
        android:id="@+id/addMarkerButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp" />


</RelativeLayout>
